#!/bin/bash
###############################################################################
# Copyright (C) Intel Corporation
#
# SPDX-License-Identifier: MIT
###############################################################################
## start of boilerplate to switch to project root ------------------------------
script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
proj_dir="$( dirname "${script_dir}" )"
cd "${proj_dir}"
set -o errexit
## read options ----------------------------------------------------------------
BUILD_MODE="Release"
USE_GPL="no"

if [ -z "$VPL_BUILD_DEPENDENCIES" ]
then
      export VPL_BUILD_DEPENDENCIES=${proj_dir}/_deps
else
      echo "VPL_BUILD_DEPENDENCIES = ${VPL_BUILD_DEPENDENCIES}"
fi

while [ "$1" != "" ]; do
  case $1 in
    gpl )
      USE_GPL="yes"
      ;;
    debug )
      BUILD_MODE="Debug"
      ;;
  esac
  shift
done

## start of commands -----------------------------------------------------------
CMAKE_BINARY_DIR=_build
if [ -n "$VPL_INSTALL_DIR" ]; then
  source "$VPL_INSTALL_DIR/env/vars.sh"
  INSTALL_OPTS=-DCMAKE_INSTALL_PREFIX="${VPL_INSTALL_DIR}"
fi
if [ "${USE_GPL}" == "yes" ]; then
 GPL_OPTS=-DBUILD_GPL_X264=ON
fi

mkdir -p ${CMAKE_BINARY_DIR}
cd ${CMAKE_BINARY_DIR}

cmake ${INSTALL_OPTS} ${GPL_OPTS} -DCMAKE_BUILD_TYPE=${BUILD_MODE} ..

make -j $(nproc)

cmake --build . --config ${BUILD_MODE} --target package

if [ -n "$TEAMCITY_VERSION" ]; then
  echo "##teamcity[publishArtifacts 'oneVPL-cpu/${CMAKE_BINARY_DIR}/*-all.zip=>']"
fi
